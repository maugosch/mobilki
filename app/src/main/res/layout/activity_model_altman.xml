<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sony.androidproject.ModelAltman">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Proszę wpisać odpowiednią liczbę"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/zyskiZatrzymane"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/aktywa"
                android:text="Zyski zatrzymane"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/kapitalObrotowyNetto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView4"
                android:text="Kapitał obrotowy netto"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/aktywa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/kapitalObrotowyNetto"
                android:text="Aktywa"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ebit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/zyskiZatrzymane"
                android:text="EBIT"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/zobowiazaniaOgolem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/wartoscRynkowaKapitaluWlasnego"
                android:text="Zobowiązania ogółem"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/wartoscRynkowaKapitaluWlasnego"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/ebit"
                android:text="Wartość rynkowa kapitału własnego"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/przychodyZeSprzedazy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/zobowiazaniaOgolem"
                android:text="Przychody ze sprzedaży"
                android:textSize="14sp" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</RelativeLayout>
