<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/x1511"
tools:context="com.example.sony.androidproject.MainMainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainWskaznikiFinansowe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:fontFamily="cursive"
        android:text="FinAnalyzer"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="40sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/witaj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_alignTop="@+id/textView9"
        android:layout_marginTop="37dp"
        android:text="witaj"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignRight="@+id/textView9"
        android:layout_alignEnd="@+id/textView9" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mainWskaznikiFinansowe"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="109dp"
        android:text="Analizator Finansowy"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Wskaźniki finansowe"
    android:id="@+id/mainWskaznikiFinansowe"
    android:onClick="wskaznikiFinansowe"
    android:layout_marginBottom="32dp"
    android:layout_above="@+id/mainModeleUpadlosci"
    android:layout_centerHorizontal="true" />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Modele upadłości"
    android:id="@+id/mainModeleUpadlosci"
    android:onClick="modeleUpadlosci"
    android:layout_marginBottom="60dp"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true" />




</RelativeLayout>

