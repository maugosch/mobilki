<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ob"
    tools:context="com.example.sony.androidproject.MainActivity">


    <TextView
        android:id="@+id/mainFinancialRatio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Wskaźniki finansowe: "
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Płynność finansowa"
        android:id="@+id/mainPlynnosc"
        android:onClick="plynnoscFinansowa"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/mainFinancialRatio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sprawność działania"
        android:id="@+id/mainSprawnosc"
        android:onClick="sprawnoscDzialania"
        android:layout_below="@+id/mainWskaznik"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wskaźnik giełdowy"
        android:id="@+id/mainWskaznik"
        android:onClick="wskaznikGieldowy"
        android:layout_below="@+id/mainWyplacalnosc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wskaźnik wypłacalności"
        android:id="@+id/mainWyplacalnosc"
        android:onClick="wskaznikWyplacalnosci"
        android:layout_below="@+id/mainPlynnosc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wskaźnik rentowności"
        android:id="@+id/mainRentownosci"
        android:onClick="wskaznikRentownosci"
        android:layout_below="@+id/mainSprawnosc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



</RelativeLayout>